@page "/todo"
@using BlazorTodoApp.Client.Services
@inject TodoService TodoService

<h3 class="mb-3">Todo List</h3>

<div class="input-group mb-3">
    <input class="form-control"
           placeholder="Add a new todo..."
           @bind="newTitle"
           @bind:event="oninput"
           @onkeydown="HandleKeyDown" />

    <button class="btn btn-primary" @onclick="Add">
        Add
    </button>
</div>

@if (TodoService.Todos.Count == 0)
{
    <p class="text-muted">No todos yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var todo in TodoService.Todos)
        {
            <li class="list-group-item d-flex align-items-center" @key="todo.Id">
                <input class="form-check-input me-2"
                       type="checkbox"
                       checked="@todo.IsDone"
                       @onchange="() => Toggle(todo.Id)" />

                <span class="flex-grow-1 @(todo.IsDone ? "text-decoration-line-through text-muted" : "")">
                    @todo.Title
                </span>

                <button class="btn btn-sm btn-outline-danger"
                        title="Delete"
                        @onclick="() => Remove(todo.Id)">
                    ✕
                </button>
            </li>
        }
    </ul>
}

@code {
    private string newTitle = string.Empty;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Load persisted todos from localStorage
            await TodoService.LoadAsync();
            StateHasChanged();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await Add();
    }

    private async Task Add()
    {
        if (!string.IsNullOrWhiteSpace(newTitle))
        {
            await TodoService.AddAsync(newTitle.Trim());
            newTitle = string.Empty;
        }
    }

    private async Task Toggle(Guid id) => await TodoService.ToggleAsync(id);
    private async Task Remove(Guid id) => await TodoService.RemoveAsync(id);
}
